#include <bits/stdc++.h>
using namespace std;

void helper()
{
    int n;
    cin>>n;
    int ans=0;
    vector<int> arr(n);
    for(int i=0; i<n; i++)
    {
        cin>>arr[i];
        ans = max(ans , arr[i]+i);
    }
    cout<<ans<<endl;
}
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        helper();
    }
    return 0;
}
